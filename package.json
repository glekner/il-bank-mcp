{
  "name": "il-bank-mcp",
  "version": "0.0.1",
  "description": "MCP server for scraping Israeli banks and credit cards data",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docker:restart": "./scripts/docker-restart.sh"
  },
  "devDependencies": {
    "eslint": "^9.28.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@4.9.1"
}
