# Israeli Bank Scrapers - Dynamic Provider Configuration
# Configure only the providers you want to use by setting their credentials
# The system will automatically detect which providers are configured

# ========== BANK PROVIDERS ==========

# Bank Hapoalim
# HAPOALIM_USERCODE=your_user_code
# HAPOALIM_PASSWORD=your_password

# Bank Leumi  
# LEUMI_USERNAME=your_username
# LEUMI_PASSWORD=your_password

# Discount Bank
# DISCOUNT_ID=your_id
# DISCOUNT_PASSWORD=your_password
# DISCOUNT_NUM=your_num

# Mercantile Bank
# MERCANTILE_ID=your_id
# MERCANTILE_PASSWORD=your_password
# MERCANTILE_NUM=your_num

# Mizrahi Bank
# MIZRAHI_USERNAME=your_username
# MIZRAHI_PASSWORD=your_password

# Bank Otsar Hahayal
# OTSAR_HAHAYAL_USERNAME=your_username
# OTSAR_HAHAYAL_PASSWORD=your_password

# Union Bank
# UNION_USERNAME=your_username
# UNION_PASSWORD=your_password

# Beinleumi
# BEINLEUMI_USERNAME=your_username
# BEINLEUMI_PASSWORD=your_password

# Yahav
# YAHAV_USERNAME=your_username
# YAHAV_PASSWORD=your_password
# YAHAV_NATIONALID=your_national_id

# ========== CREDIT CARD PROVIDERS ==========

# Visa Cal
# VISA_CAL_USERNAME=your_username
# VISA_CAL_PASSWORD=your_password

# Max (Leumi Card)
# MAX_USERNAME=your_username
# MAX_PASSWORD=your_password

# Isracard
# ISRACARD_ID=your_id
# ISRACARD_CARD6DIGITS=last_6_digits
# ISRACARD_PASSWORD=your_password

# American Express
# AMEX_USERNAME=your_username
# AMEX_CARD6DIGITS=last_6_digits
# AMEX_PASSWORD=your_password

# ========== OTHER PROVIDERS ==========

# Massad
# MASSAD_USERNAME=your_username
# MASSAD_PASSWORD=your_password

# Beyhad Bishvilha
# BEYAHAD_ID=your_id
# BEYAHAD_PASSWORD=your_password

# OneZero (Experimental)
# ONEZERO_USERNAME=your_username
# ONEZERO_PASSWORD=your_password

# Behatsdaa
# BEHATSDAA_USERNAME=your_username
# BEHATSDAA_PASSWORD=your_password

# Pagi
# PAGI_USERNAME=your_username
# PAGI_PASSWORD=your_password

# ========== SCRAPING CONFIGURATION ==========

# Number of months to scrape backward (default: 6)
SCRAPE_MONTHS_BACK=6

# Cron schedule for automatic scraping (default: every 6 hours)
SCRAPE_CRON_SCHEDULE="0 */6 * * *"

# ========== DATABASE CONFIGURATION ==========

# Path to SQLite database file
DATABASE_PATH=./data/bank-data.db

# ========== LOGGING ==========

# Log level: debug, info, warn, error
LOG_LEVEL=info 

# ========== QUERY CONFIGURATION ==========

# Comma-separated list of account IDs to ignore when querying (does not affect scraping)
# Example: IGNORED_ACCOUNT_IDS=account1,account2,account3
IGNORED_ACCOUNT_IDS= 