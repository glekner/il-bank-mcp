{
  "mcpServers": {
    "israeli-bank-assistant": {
      "command": "node",
      "args": [
        "<REPLACE_WITH_ABSOLUTE_PATH>/packages/mcp-server/dist/index.js"
      ],
      "env": {
        "BANK_LEUMI_USERNAME": "<YOUR_BANK_LEUMI_USERNAME>",
        "BANK_LEUMI_PASSWORD": "<YOUR_BANK_LEUMI_PASSWORD>",
        "VISA_CAL_USERNAME": "<YOUR_VISA_CAL_USERNAME>",
        "VISA_CAL_PASSWORD": "<YOUR_VISA_CAL_PASSWORD>",
        "MAX_USERNAME": "<YOUR_MAX_USERNAME>",
        "MAX_PASSWORD": "<YOUR_MAX_PASSWORD>",
        "DATABASE_PATH": "<REPLACE_WITH_ABSOLUTE_PATH>/data/bank-data.db",
        "SCRAPE_MONTHS_BACK": "3",
        "SCRAPE_CRON_SCHEDULE": "0 */6 * * *"
      }
    }
  },
  "_comment": "This MCP server provides both tools and prompts for comprehensive financial analysis. The system prompt establishes Claude as an Israeli financial advisor with access to real-time bank data."
}
